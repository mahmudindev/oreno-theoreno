---
interface Props {
	name: string;
	slog: string;
}

const { name, slog } = Astro.props;
---

<div class="flex flex-col space-y-2 text-center pt-24 pb-12">
	<h1 class="text-3xl sm:text-6xl font-bold">Welcome to <span
		class="text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-red-500"
	>{name}</span></h1>
	<small class="py-2">{slog}</small>
</div>
